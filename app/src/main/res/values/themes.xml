<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rindex" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#328bbf</item>
        <item name="colorPrimaryVariant">#27719c</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Rindex.NoActionBar" parent="Theme.Rindex">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.MaterialComponents.Toolbar.Custom" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="fontFamily">@font/pacifico</item>
    </style>

    <style name="PacificoTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/pacifico</item>
    </style>

    <style name="PacificoTextAppearanceSizePlus" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/pacifico</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="RobotoTextAppearanceTopBar" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="PlaceView.Right">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PlaceView.Right.Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="color">#1f1f1f</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="PlaceView.Right.Chips" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:paddingTop">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="PlaceView"></style>

    <style name="IntentHeader">
        <item name="android:textSize">15dp</item>
        <item name="fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="Theme.Rindex.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Rindex.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Rindex.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>