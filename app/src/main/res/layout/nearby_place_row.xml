<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_margin="6dp"
        app:strokeWidth="0.4dp"
        app:strokeColor="#ccc"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:scaleType="centerCrop"
                android:layout_height="100dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/PlaceView.Right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PlaceView.Right.Header"
                        android:textSize="15dp"
                        android:text="Header">


                    </TextView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/serveAlcohol"
                        android:layout_height="16dp"
                        android:layout_width="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_outline_liquor_24"
                        android:visibility="gone">

                    </ImageView>

                    <ImageView
                        android:id="@+id/hasFamilyLounge"
                        android:layout_height="16dp"
                        android:layout_width="16dp"
                        android:layout_marginTop="4dp"                        android:layout_marginRight="3dp"

                        android:src="@drawable/ic_outline_family_restroom_24"
                        android:visibility="gone">

                    </ImageView>

                    <ImageView
                        android:id="@+id/hasLocalFood"
                        android:layout_height="16dp"
                        android:layout_width="16dp"
                        android:layout_marginTop="4dp"                        android:layout_marginRight="3dp"

                        android:src="@drawable/ic_outline_local_dining_24"
                        android:visibility="gone">

                    </ImageView>

                    <ImageView
                        android:id="@+id/hasInternetConnection"
                        android:layout_height="16dp"
                        android:layout_width="16dp"
                        android:layout_marginTop="4dp"                        android:layout_marginRight="3dp"

                        android:src="@drawable/ic_outline_wifi_24"
                        android:visibility="gone">

                    </ImageView>

                    <ImageView
                        android:id="@+id/hasVirusPrecautions"
                        android:layout_height="16dp"
                        android:layout_width="16dp"
                        android:layout_marginTop="4dp"                        android:layout_marginRight="3dp"

                        android:src="@drawable/ic_outline_coronavirus_24"
                        android:visibility="gone">

                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="8dp"
                        android:drawableLeft="@drawable/ic_baseline_star_border_24"
                        >

                    </TextView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/PlaceView.Right.Chips">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Province"
                        android:textSize="10dp"
                        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/district"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="District"
                        android:layout_marginLeft="4dp"
                        android:textSize="10dp"
                        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"/>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>