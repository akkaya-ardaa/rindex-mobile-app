<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="0.3dp"
        app:strokeColor="#dddddd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:scaleType="centerCrop"
                    android:foreground="@drawable/profile_photo_view"
                    android:src="@drawable/rindexlogo">

                </ImageView>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp">

                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#dddddd">

            </View>

            <TextView
                android:id="@+id/body"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            </TextView>

            <TextView
                android:id="@+id/date"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:layout_marginBottom="4dp">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#dddddd">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reply"
                    android:layout_marginLeft="3dp"
                    android:textAllCaps="false"
                    android:letterSpacing="0"
                    android:drawableLeft="@drawable/ic_baseline_reply_24"
                    style="@style/Widget.MaterialComponents.Button.TextButton">

                </Button>

                <Button
                    android:visibility="gone"
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:layout_marginLeft="3dp"
                    android:textAllCaps="false"
                    android:letterSpacing="0"
                    android:drawableLeft="@drawable/ic_baseline_delete_24_question"
                    style="@style/Widget.MaterialComponents.Button.TextButton">

                </Button>


                <Button
                    android:id="@+id/answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_replies"
                    android:textAllCaps="false"
                    android:layout_marginLeft="8dp"
                    android:letterSpacing="0"
                    android:drawableLeft="@drawable/ic_baseline_visibility_24"
                    style="@style/Widget.MaterialComponents.Button.TextButton">

                </Button>

            </LinearLayout>



        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>